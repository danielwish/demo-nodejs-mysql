<div class="container">
    <div class="row mt-5">
        <div class="col-md-7">
            <table class="table table-bordered table-hover">
                <thead>
                    <th>NÂº</th>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Phone</th>
                    <th>Accions</th>
                </thead>
                <tbody>
                    <% if(data) { %>
                        <% for(var i=0; i<data.length; i++){ %>
                            <tr>
                                <td><%= (i + 1) %></td>
                                <td><%= data[i].name %></td>
                                <td><%= data[i].address %></td>
                                <td><%= data[i].phone %></td>
                                <td>
                                    <a href="/delete/<%= data[i].id %>" class="btn btn-danger">DELETE</a>
                                    <a href="/edit/<%= data[i].id %>" class="btn btn-info">EDIT</a>
                                </td>
                            </tr>
                        <% } %>
                    <% } %>
                </tbody>
            </table>
        </div>
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/add" method="POST">
                        <div class="form-group">
                            <input type="text" name="name" value="" placeholder="Name" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="address" value="" placeholder="Address" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="phone" value="" placeholder="Phone" class="form-control">
                        </div>
        
                        <button type="submit" class="btn btn-primary">SAVE CUSTOMER</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

